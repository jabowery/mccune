#!/bin/csh

if ($#argv != 2) then
	echo "need 2 args: bin-directory (problem-set-file | directory)"
	exit(1)
endif

set bin=$1

if -d $2 then
    set group=$2
else
    set group=`cat $2`
endif


foreach d ($group)
    echo "================= Starting problem set $d ================="
    cd $d
    foreach i (*.out)
	head -1 $i | egrep "= (mccune|FOF-mccune) =" > /dev/null
	if ($status == 0) then
	    echo "prooftrans ivy -f $i"
	    $bin/prooftrans ivy -f $i > $i:r.ivy
	    continue
	else
	    echo "    Skipping $i, because it's not mccune output."
	endif

    end
    cd ..
end
